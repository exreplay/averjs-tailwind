{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "dom", "es2015"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "strict": true,
    "removeComments": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": true,
    "types": [
      "node",
      "jest",
      "@averjs/cli"
    ]
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*.ts"
  ]
}